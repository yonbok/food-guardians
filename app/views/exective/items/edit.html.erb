<h3 class="text-center">商品編集</h3>
<%= form_with model: [:exective, @item], local: true, class: 'col-6 mx-auto' do |f| %>
  <div class="form-group row">
    <%= f.label :item_image, '商品画像', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= f.file_field :item_image, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :name, '商品名', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= f.text_field :name, placeholder: "商品名", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, '商品説明', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= f.text_area :description, placeholder: "商品説明", class: 'form-control' %>
    </div>
  </div>
   <div class="form-group row">
    <%= f.label :genre_id, 'ジャンル', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :price, '税抜価格', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9 input-group">
      <%= f.number_field :price, placeholder: "1000", class: 'form-control' %>
      <div class="input-group-append">
        <span class="input-group-text">円</span>
      </div>
    </div>
  </div>

 <div class="form-group row">
  <%= f.label :is_active, '販売ステータス', class: 'col-sm-3 col-form-label' %>
  <div class="col-sm-9">
    <div class="custom-control custom-radio custom-control-inline">
      <%= f.radio_button :is_active, true, checked: @item.is_active, class: 'custom-control-input', id: 'is_active-true' %>
      <%= f.label :is_active, '販売中', class: 'custom-control-label', for: 'is_active-true' %>
    </div>
    <div class="custom-control custom-radio custom-control-inline">
      <%= f.radio_button :is_active, false, checked: !@item.is_active, class: 'custom-control-input', id: 'is_active-false' %>
      <%= f.label :is_active, '販売停止中', class: 'custom-control-label', for: 'is_active-false' %>
    </div>
  </div>
</div>


  </div>
  <div class="form-group row">
    <div class="col-sm-9 offset-sm-3">
      <%= f.submit '変更を保存', class: 'btn btn-success text-white' %>
    </div>
  </div>
<% end %>
