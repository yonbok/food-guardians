<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-2">
      <div class="list-group" style="background-color: #ffbf7f; padding: 10px;">
        <p>ジャンル一覧</p>
        <% @genres.each do |genre| %>
          <%= link_to genre.name, items_path(genre_id: genre.id), class: "list-group-item list-group-item-action custom-list-item" %>
        <% end %>
      </div>
     </div>
    <h2 class="text-center">商品一覧</h2>
    <div class="ml-auto">
      <%= link_to '商品新規登録', new_exective_item_path, class: 'btn', style: 'background-color: #ffff00;' %>
    </div>
    <div class="col-10">
    <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
           <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, exective_item_path(item) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td style="margin-left:90px; color:green;">
            <%= item.is_active ? '販売中' : '販売停止中' %></td>
            </td>
           </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>



