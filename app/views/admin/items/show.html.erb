<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="list-group" style="background-color: #008000; padding: 10px;">
        <p>ジャンル一覧</p>
        <%# @genres.each do |genre| %>
          <%#= link_to genre.name, items_path(genre_id: genre.id), class: "list-group-item list-group-item-action custom-list-item" %>
        <%# end %>
      </div>
    </div>
    <div class="col-lg-8">
      <div class="row">
        <div class="col-6">
          <img src="<%= url_for(@item.item_image) %>" width="300" height="250" />
        </div>
        <div class="col-6">
            <h1><%= @item.name %></h1><br>
            <h3><%= @item.description %></h3><br><br>
            <h2>￥<%= @item.price %>(税込)</h2><br><br>
        </div>
      </div>
    </div>
  </div>
</div>
