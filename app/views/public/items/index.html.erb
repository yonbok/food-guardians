<div class="col-9">
    <h2>商品一覧（全<%= @items.count %>件）</h2>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-sm-4 mb-4">
          <div class="card h-100">
            <%= link_to customer_path(item.id) do %>
              <%= image_tag url_for(item.image), class: "card-img-top", style: "object-fit: contain; height: 200px;" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text">¥<%= number_with_delimiter(item.price) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
