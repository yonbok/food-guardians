<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-2"></div>
    <div class="col-md-8">

      <h2 class="text-center mb-4">登録情報</h2>
      <%= link_to '登録情報編集',  edit_customer_path(@customer), class: "btn btn-success mb-4" %>

      <div class="table-responsive">
        <table class="table table-bordered">
          <tr>
            <th class="table-secondary w-25">氏名</th>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <th class="table-secondary">カナ</th>
            <td> <%= @customer.kana_name %></td>
          </tr>
          <tr>
            <th class="table-secondary">郵便番号</th>
            <td><%= @customer.post_code.to_s.insert(3, "-") %></td>
          </tr>
          <tr>
            <th class="table-secondary">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="table-secondary">電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th class="table-secondary">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>
      <% if @cart_item.present? %>
        <%= link_to '配送先一覧表示', cart_item_addresses_path(@cart_item), class: "btn btn-info mb-4" %>
      <% end %>
      <%# @orders.each do |order| %>
      <% if @orders.present? %>
      <%= link_to '注文履歴一覧表示', orders_path, class: "btn btn-info mb-4" %>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
